    "test:unit": "node --test"
  },
  "devDependencies": {
    "@rowanmanning/eslint-config": "^8.0.1",
    "@types/node": "^20.10.2",
    "eslint": "^8.55.0",
    "typescript": "^5.3.2"
  },
  "mocha": {
    "ignore": [
      "node_modules/**"
    ],
    "timeout": 10000
  }
