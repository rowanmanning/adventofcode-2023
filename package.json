{
  "name": "@rowanmanning/adventofcode-2023",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "volta": {
    "node": "20.10.0",
    "npm": "10.2.4"
  },
  "workspaces": [
    "packages/*",
    "solutions/*"
